package questao5l2;

import java.util.Scanner;

public class Questao5Main {

    public static void main(String[] args) {
        Scanner ler = new Scanner(System.in);
        float n1, n2, n3;
        System.out.println("Informe o primeiro número:");
        n1 = ler.nextFloat();
        System.out.println("Informe o segundo número:");
        n2 = ler.nextFloat();
        System.out.println("Informe o terceiro número:");
        n3 = ler.nextFloat();
        System.out.println("1- Média ");
        System.out.println("2- Soma ");
        System.out.println("3- Multiplicação ");
        System.out.println("Escolha uma opção :");
        int opcao = ler.nextInt();
        switch (opcao) {
            case 1:
                System.out.println("A média dos números é: " + ((n1 + n2 + n3) / 3));
                break;
            case 2:
                System.out.println("A soma dos números é:" + (n1 + n2 + n3));
                break;
            case 3:
                System.out.println("A multiplicação dos números é:" + (n1 * n2 * n3));
                break;
            default:
                System.out.println("A opção escolhida é inválida!");
                break;
        }
    }

}
